<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/chromas_list_view"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true">

        <LinearLayout
            android:background="@drawable/silver"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <View
                android:visibility="invisible"
                android:elevation="33dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:background="@color/chiron_grey"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="6dp"
                    android:layout_marginStart="6dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:id="@+id/chroma_list_label"
                    android:text="@string/marker_alias"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:fontFamily="@font/montserratregular"
                    android:textSize="21sp"
                    android:letterSpacing="0.21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <androidx.cardview.widget.CardView
                    android:id="@+id/chroma_list_custom_1"
                    app:cardCornerRadius="29dp"
                    app:layout_constraintTop_toBottomOf="@id/chroma_list_label"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginStart="23dp"
                    android:layout_width="40dp"
                    android:padding="13dp"
                    android:layout_height="40dp">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_gravity="center"
                        app:cardCornerRadius="21dp"
                        app:cardElevation="0dp"
                        app:strokeWidth="0.3dp"
                        app:strokeColor="@color/chiron_grey"
                        android:layout_marginBottom="0dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp">

                        <ImageView
                            android:id="@+id/chroma_list_hex_1"
                            android:layout_gravity="center"
                            android:src="@color/chiron_red"
                            android:layout_width="30dp"
                            android:layout_height="30dp"/>

                    </com.google.android.material.card.MaterialCardView>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/chroma_list_custom_2"
                    app:cardCornerRadius="29dp"
                    app:layout_constraintTop_toBottomOf="@id/chroma_list_label"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/chroma_list_custom_1"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginStart="23dp"
                    android:layout_width="40dp"
                    android:padding="13dp"
                    android:layout_height="40dp">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_gravity="center"
                        app:cardCornerRadius="21dp"
                        app:cardElevation="0dp"
                        app:strokeWidth="0.3dp"
                        app:strokeColor="@color/chiron_grey"
                        android:layout_marginBottom="0dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp">

                        <ImageView
                            android:id="@+id/chroma_list_hex_2"
                            android:layout_gravity="center"
                            android:src="@color/chiron_deep_green"
                            android:layout_width="30dp"
                            android:layout_height="30dp"/>

                    </com.google.android.material.card.MaterialCardView>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/chroma_list_custom_3"
                    app:cardCornerRadius="29dp"
                    app:layout_constraintTop_toBottomOf="@id/chroma_list_label"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/chroma_list_custom_2"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginStart="23dp"
                    android:layout_width="40dp"
                    android:padding="13dp"
                    android:layout_height="40dp">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_gravity="center"
                        app:cardCornerRadius="21dp"
                        app:cardElevation="0dp"
                        app:strokeWidth="0.3dp"
                        app:strokeColor="@color/chiron_grey"
                        android:layout_marginBottom="0dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp">

                        <ImageView
                            android:id="@+id/chroma_list_hex_3"
                            android:layout_gravity="center"
                            android:src="@color/chiron_blue"
                            android:layout_width="30dp"
                            android:layout_height="30dp"/>

                    </com.google.android.material.card.MaterialCardView>

                </androidx.cardview.widget.CardView>




            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:elevation="33dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="0dp"
                android:background="@color/chiron_grey"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>

</LinearLayout>