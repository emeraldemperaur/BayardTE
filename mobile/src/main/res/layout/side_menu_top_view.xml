<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/nue_bckgrnd"
    android:layout_height="169dp">

    <ImageView
        android:id="@+id/chiron_side_logo"
        android:layout_marginStart="6dp"
        android:src="@drawable/me_white_logo"
        android:layout_marginTop="69dp"
        android:layout_marginBottom="6dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:contentDescription="@string/meka_egwim" />

    <TextView
        android:id="@+id/wearable_name_sidemenu"
        android:layout_marginStart="6dp"
        android:layout_marginTop="23dp"
        app:layout_constraintTop_toBottomOf="@id/chiron_side_logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:letterSpacing="0.21"
        android:textSize="13sp"
        android:text="@string/wearable_name"
        android:fontFamily="@font/montserratregular"
        android:textColor="@color/white"
        />






</androidx.constraintlayout.widget.ConstraintLayout>